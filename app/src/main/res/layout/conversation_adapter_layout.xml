<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Opposide-->
        <LinearLayout
            android:id="@+id/opposideLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/oppoMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opo_convo_back"
                android:text="This is user 2 message"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/oppoMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-08-2023 05:12"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <!-- User -->
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/myLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp"
            android:orientation="vertical">
            <TextView

                android:layout_gravity="end"
                android:id="@+id/myMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_convo_back"
                android:text="This is user 2 message"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_gravity="end"
                android:id="@+id/myMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-08-2023 05:12"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="12sp"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>